# AI Agent Project Environment Configuration
# Copy this file to .env in the respective directories and update with your values

# =============================================================================
# FRONTEND ENVIRONMENT (.env.local in frontend-nextjs/)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME="AI Agent"

# =============================================================================
# BACKEND ENVIRONMENT (.env in backend/)
# =============================================================================

# NVIDIA NIM API Configuration
NIM_DEEPSEEK_R1_API="<your_nvidia_nim_api_key>"

# Application Settings
ENVIRONMENT="development"
DEBUG=true

# Ollama Configuration
OLLAMA_API_BASE="http://127.0.0.1:11434"
OLLAMA_MODEL="qwen2:7b"
OLLAMA_CONTEXT_LENGTH=8192

# Database Configuration (for future use)
DATABASE_URL="sqlite:///./ai_agent.db"

# CORS Settings (comma-separated list)
ALLOWED_HOSTS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001"
